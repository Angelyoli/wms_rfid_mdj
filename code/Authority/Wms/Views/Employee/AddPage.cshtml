@{
    Layout = null;
}
<div class="easyui-layout" fit="true" border="false">
    <div region="center" border="false" style="padding: 10px 10px; background: #fff;
        border: 1px solid #ccc;">
        <form id="fm" method="post" novalidate>
        <table width="520">
            <tr>
                <td width="60" align="right">
                    员工编码：
                </td>
                <td width="168">
                    <input name="EmployeeCode" id="inputEmployeeCode" class="easyui-validatebox" validtype="maxLength[8]"
                        required="true" />
                    <input name="ID" style="display: none" />
                </td>
                <td width="60" align="right">
                    员工姓名：
                </td>
                <td width="168">
                    <input name="EmployeeName" class="easyui-validatebox" validtype="maxLength[50]" required="true" />
                </td>
            </tr>
            <tr>
                <td align="right">
                    性别：
                </td>
                <td>
                    <select id="sex" name="Sex" class="easyui-combobox" style="width: 130px" class="easyui-validatebox"
                        required="true">
                        <option value="男">男</option>
                        <option value="女">女</option>
                        <option value="保密">保密</option>
                    </select>
                </td>
                <td align="right">
                    电话：
                </td>
                <td>
                    <input name="Tel" class="easyui-numberbox" type="text" min="6" max="13" required="true"
                        missingmessage="请输入电话号码（必须为数字）" />
                </td>
            </tr>
            <tr>
                <td align="right">
                    状态：
                </td>
                <td>
                    <select id="Status" name="Status" class="easyui-combobox" style="width: 130px">
                        <option value="3701">在职</option>
                        <option value="3702">离职</option>
                        <option value="3703">退休</option>
                        <option value="3704">试用</option>
                        <option value="3705">外调</option>
                        <option value="3706">停薪留职</option>
                        <option value="3707">借用</option>
                        <option value="3708">其他</option>
                    </select>
                </td>
                <td align="right">
                    是否可用：
                </td>
                <td>
                    <select id="isActive_emp" name="IsActive" class="easyui-combobox" style="width: 130px">
                        <option value="1">可用</option>
                        <option value="0">不可用</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td align="right">
                    部门名称：
                </td>
                <td width="168">
                    <input name="DepartmentID" id="departId" style="display: none;" />
                    <input name="DepartmentName" id="departName" readonly="readonly" class="easyui-validatebox" />
                    <a href="#" id="departNameSearch" class="easyui-linkbutton" iconcls="icon-search"
                        plain="true" onclick="departNameSearchClick()"></a>
                </td>
                <td width="60" align="right">
                    岗位：
                </td>
                <td width="168">
                    <input name="JobID" id="jobId" required="true" style="display: none;" />
                    <input name="JobName" id="jobName" required="true" readonly="readonly" class="easyui-validatebox" />
                    <a href="#" id="jobSearch" class="easyui-linkbutton" iconcls="icon-search" plain="true"
                        onclick="jobSearchClick()"></a>
                </td>
            </tr>
            <tr>
                <td align="right">
                    用户名称：
                </td>
                <td width="168" colspan="3">
                    <input name="UserName" id="user-add" readonly="readonly" class="easyui-validatebox" />
                    <a href="#" id="userSearch" class="easyui-linkbutton" iconcls="icon-search" plain="true"
                        onclick="userSearchClick()"></a>
                </td>
            </tr>
            <tr>
                <td width="60" align="right">
                    描述：
                </td>
                <td width="168" colspan="3">
                    <textarea name="Description" id="desId" style="width: 385px; height: 80px"></textarea>
                </td>
            </tr>
        </table>
        </form>
    </div>
</div>
@Html.Partial("_DepartmentNamePartial")
@Html.Partial("_JobPartial")
@Html.Partial("_UserNamePartial")