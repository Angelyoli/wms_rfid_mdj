<script type="text/javascript">
    function applyClick() {
        var row = $('#details').datagrid('getSelections');
        var rowId = "";
        if (row) {
            for (var i = 0; i < row.length; i++) {
                rowId += row[i].ID + ",";
            }
            $.ajaxSender.send('/StockCheckTask/Operate/',
                        {
                            'id': rowId,
                            'status': '1'
                        },
                        function (data) {
                            $('#details').datagrid('reload');
                        });
        } else {
            $.messager.alert('系统提示', '未选中行', 'info');
        }
    }
</script>
