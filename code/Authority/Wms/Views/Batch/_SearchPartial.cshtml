<script type="text/javascript">
    var searchDialog;
    var module = "Batch";
    var searchKey = false;
    var addKey = false;
    var editKey = false;
    var deleteKey = false;
    var parentComNameKey = false;

    function searchClick() {
        $("input[type=text]").attr("value", "");
        $('#searchOperateDate').datebox({ editable: false });
        $('#searchOperateDate').datebox('setValue', "");
        $('#searchOrderDate').datebox({ editable: false });
        $('#searchOrderDate').datebox('setValue', "");

        if (searchDialog == null) {
            searchDialog = $('<div></div>').dialog({
                title: '查询',
                width: 280,
                height: 190,
                closed: true,
                cache: false,
                modal: true,
                href: '/Batch/SearchPage/',
                buttons: [{
                    text: '查询',
                    iconCls: 'icon-ok',
                    handler: function () {
                        GetQueryParams();
                    }
                }, {
                    text: '取消',
                    iconCls: 'icon-cancel',
                    handler: function () {
                        searchDialog.dialog('close');
                    }
                }]
            });
        }
        searchKey = true;
        searchDialog.dialog('open');
    };
    function GetQueryParams() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.BatchNo = $('#searchBatchNo').val();
        queryParams.BatchName = $('#searchBatchName').val();
        queryParams.OperateDate = $('#searchOperateDate').datebox('getValue');
        queryParams.OrderDate = $('#searchOrderDate').datebox('getValue');
        $('#details').datagrid('options').queryParams = queryParams;
        $("#details").datagrid('load');
        searchDialog.dialog('close');
    }
</script>
