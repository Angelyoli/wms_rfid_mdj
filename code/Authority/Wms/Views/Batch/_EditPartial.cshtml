<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            showDialog('编辑');
            editKey = true;
            addDialog.dialog('open');
            url = '/Batch/Edit/';
            $('form textarea').removeAttr("disabled");
            $('#fm').form('load', row);
            $('#inputBatchId').attr("disabled", 'disabled');
        } else {
            $.messager.alert('错误', '没有选择行！', 'info');
        }
    };
</script>

