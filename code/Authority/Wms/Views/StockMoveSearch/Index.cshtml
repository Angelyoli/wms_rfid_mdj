                <th field="BillDate" width="130" align="center">制单日期</th>
                <th field="OperatePersonName" width="80" align="center">操作员</th>
                <th field="Status" width="80" align="center">处理状态</th>
                <th field="VerifyPersonName" width="80" align="center">审核人</th>
                <th field="VerifyDate" width="130" align="center">审核日期</th>
                <th field="Description" width="200" align="center">备注</th>
            </tr>
        </thead>
    </table>
</div>
