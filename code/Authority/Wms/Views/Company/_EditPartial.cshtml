<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            AddLoad();
            showDialog('编辑');
            addDialog.dialog('open');
            url = '/Company/Edit/';
            //            $('#dlg').dialog('open').dialog('setTitle', '编辑');
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");
            $('#inputCompanyCode').attr("readonly", true);
            $('#companyfm').form('load', row);
            $('#companyfm .easyui-validatebox').validatebox({
                required: true
            });
            //CompantyType
            if (row.CompanyType == "配送中心") {
                $('company_type').combo('setValue', 1).combo('setText', row.CompanyType);
            }
            else if (row.CompanyType == "市公司") {
                $('company_type').combo('setValue', 2).combo('setText', row.CompanyType);
            }
            else if (row.CompanyType == "县公司") {
                $('company_type').combo('setValue', 3).combo('setText', row.CompanyType);
            }
            $('#company_type').combo({
                hasDownArrow: true
            });
            //IsActive
            if (row.IsActive == '可用') {
                $('#isActive_com').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#isActive_com').combo('setValue', 0).combo('setText', row.IsActive);
            }
            $('#isActive_com').combo({
                hasDownArrow: true
            });
        } else {
            $.messager.alert('错误', '没有选择行！', 'info');
        }
    };
</script>
