<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            url = '/Company/Delete/?companyID=' + row.ID;
            showDialog('删除');
            deleteKey = true;
            addDialog.dialog('open');
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");
            $('#companyfm').form('load', row);
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");
            $('#companyfm .easyui-validatebox').validatebox({
                required: false
            });
            $('#isActive_com').combo({
                hasDownArrow: false
            });
            $('#company_type').combo({
                hasDownArrow: false
            });
            if (row.IsActive == '启用') {
                $('#isActive_com').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#isActive_com').combo('setValue', 0).combo('setText', row.IsActive);
            }
        } else {
            $.messager.alert('错误', '没有选择行！', 'info');
        }
    };
</script>
