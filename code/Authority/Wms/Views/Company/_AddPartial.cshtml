<script type="text/javascript">
    var url;
    var addDialog;
    $(function () {
        $.extend($.fn.validatebox.defaults.rules, {
            maxLength: {
                validator: function (value, param) {
                    return value.length <= param[0];
                },
                message: '不能超过{0}个字符.'
            }
        });
    })

    //加载新增和编辑窗体
    function showDialog(title) {
        if (addDialog == null) {
            addDialog = $('<div></div>').dialog({
                title: title,
                width: 510,
                height: 300,
                closed: true,
                cache: false,
                modal: true,
                href: '/Company/AddPage/',
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        save();
                    }
                }, {
                    text: '取消',
                    iconCls: 'icon-cancel',
                    handler: function () {
                        addDialog.dialog('close');
                    }
                }],
                onLoad: function () {
                    if (title == '编辑') {
                        var erow = $('#details').datagrid('getSelected');
                        $('#companyfm').form('load', erow);
                    }
                    else if (title == '删除') {
                        var drow = $('#details').datagrid('getSelected');
                        $('#companyfm').form('load', drow);
                        $('form input').attr("disabled", "disabled");
                        $('form textarea').attr("disabled", "disabled");
                    }
                }
            });
        }
        else {
            addDialog.dialog({ title: title });
        }
     }

    function addClick() {
        AddLoad();
        showDialog('新增');
        addDialog.dialog('open');

        $('#companyfm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#companyfm').form('clear');
        $('#inputCompanyCode').attr("readonly", false);
        $('#company_type').combo({
            hasDownArrow: true
        });
        $('#isActive_com').combo({
            hasDownArrow: true
        });
        url = '/Company/Create/';
    };

    function save() {
        if ($("#desId").val().length > 100) {
            $.messager.alert("提示", "描述应小于100个字(包括空格)", "info");
            return false
        }
        $('#companyfm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.alert(g_MsgBoxTitle, result.msg, "info");
                    addDialog.dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.alert(g_MsgBoxTitle, result.msg + '<br />' + result.data, "error");
                    $('#details').datagrid('reload');
                }
            }
        });
    }

    function AddLoad() {
        $('#isActive_com').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 130
        });

        $('#company_type').combo({
            required: true,
            editable: false,
            panelHeight: 65,
            panelWidth: 130
        });
    }

    function parentCompanyNameSearchClick() {
        $('#parentCompanyNameData').dialog('open').dialog('setTitle', '选择上级公司名称');
        $('#parentCompanyNameDetail').datagrid({ url: '/Company/GetParentName/' });
        $("#parentCompanyNameDetail").datagrid('reload');
    }
</script>