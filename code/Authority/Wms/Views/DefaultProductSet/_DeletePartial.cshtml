<script type="text/javascript">
    function deleteClick() {
        var productRows = $('#details').datagrid('getSelections', 1);
        var pRows = "";
        if (!productRows || productRows.length == 0) {
            $.messager.alert('提示', '请选择要删除的数据!', 'info');
            return;
        }
        $.messager.confirm('删除', '确认要删除该记录吗？', function (r) {
            $.messager.confirm('删除', '警告：请谨慎操作！', function (r) {
                if (r) {
                    for (var i = 0; i < productRows.length; i++) {
                        pRows += productRows[i].ProductCode + ",";
                    }
                    $.ajaxSender.send('/DefaultProductSet/CellDel/',
                        {
                            'productCodes': pRows
                        },
                        function (data) {
                            $('#details').datagrid('reload');
                        });
                }
            });
        });
    }
</script>
