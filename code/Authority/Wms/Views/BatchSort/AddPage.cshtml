@{
    Layout = null;
}
<div class="easyui-layout" fit="true" border="false">
    <div region="center" border="false" style="padding: 10px 10px; background: #fff;
        border: 1px solid #ccc;">
        <form id="fm" method="post" novalidate>
        <table width="250">
            <tr  hidden="true">
                <th width="100" style="display: none">
                    ID
                </th>
                <td>
                BatchId
                  <input type="text" name="BatchId" id="addBatchId" readonly="true" />
                </td>
                <td>
                BatchSortId
                 <input type="text" name="BatchSortId" id="addBatchSortId" readonly="true" />
                </td>
                <td>
                SortingLineCode
                 <input type="text" name="SortingLineCode" id="addSortingLineCode" readonly="true" />
                </td>
            </tr>
            <tr>
                <td style="text-align: right">
                    批次号:
                </td>
                <td align="left">
                    <input type="text" name="BatchNo" id="addBatchNo" readonly="true" />
                    <a href="#" onclick="batchClick()" class="easyui-linkbutton" iconcls="icon-search"
                        plain="true"></a>
                </td>
            </tr>
            <tr>
                <td style="text-align: right">
                    批次名称:
                </td>
                <td align="left">
                    <input type="text" name="BatchName" class="easyui-validatebox" required="true" id="addBatchName"
                        readonly="true" />
                </td>
                <td>
                </td>
            </tr>
            <tr>
                <td width="60">
                    分拣日期:
                </td>
                <td align="left">
                    <input id="addOperateDate" type="text" class="easyui-validatebox" style="width: 130px;"
                        name="OperateDate" readonly="true" />
                </td>
                <td>
                </td>
            </tr>
            <tr>
                <td width="60" style="text-align: right">
                    状态:
                </td>
                <td align="left">
                    <select id="addStatus" name="Status" class="easyui-combobox" readonly="readonly">
                        <option value="">请选择</option>
                        <option value="01">未下载</option>
                        <option value="02">已下载</option>
                        <option value="03">已挂起</option>
                        <option value="04">已结单</option>
                        <option value="05"></option>
                    </select>
                </td>
            </tr>
        </table>
        </form>
    </div>
</div>
@Html.Partial("_BatchPartial")
