@{
    Layout = null;
}
<div id="dlg" class="easyui-layout" fit="true" border="false">
    <div region="center" border="false" style="padding: 10px 10px; background: #fff;
        border: 1px solid #ccc;">       
        <table width="250">
        <tr>
        <th field="BatchId" width="100" hidden="true">
                    批次编号
                </th>
        </tr>
            <tr>
              <td style="text-align: right">
                    批次号:
                </td>
                <td align="left">
                    <input type="text" name="BatchNo" id="searchBatchNo" readonly="true" />
                    <a href="#" onclick="batchClick()" class="easyui-linkbutton" iconcls="icon-search" plain="true"></a>
                </td>
            </tr>
            <tr>
                <td style="text-align: right">
                    批次名称:
                </td>
                <td align="left">
                    <input type="text" name="BatchName" class="easyui-validatebox" required="true" id="searchBatchName" readonly="true" />
                </td>
                <td>
                </td>
            </tr>

              <tr>                             
                 <td width="60">分拣日期:</td>
                   <td align="left"><input id="searchOperateDate" type="text" class="easyui-datebox" style="width:130px;" readonly="true" /></td>                
                <td>
                </td>
            </tr>
            <tr>
                <td width="60" style="text-align: right">
                    状态:
                </td>
                <td align="left">
                    <select id="searchStatus" name="Status" class="easyui-combobox" readonly="readonly">
                        <option value="">请选择</option>
                        <option value="01">未下载</option>
                        <option value="02">已下载</option>
                        <option value="03">已挂起</option>
                        <option value="04">已结单</option>
                        <option value="05"></option>
                    </select>
                </td>
            </tr>
        </table>        
    </div>
</div>
@Html.Partial("_BatchPartial")