<script type="text/javascript">
    $(function () {
        $('#batchDetail').datagrid({
            //双击赋值
            onDblClickRow: function () {
                batchSave();
            }
        })
        //属性初始化
        $('#queryBatch').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        })
    });
    //选中赋值
    function batchSave() {
        var batchRow = $('#batchDetail').datagrid('getSelected');
        if (batchRow) {
            $('#searchBatchId').val(batchRow.BatchId);
            $('#searchBatchNo').val(batchRow.BatchNo);
            $('#searchBatchName').val(batchRow.BatchName);
//            $('#searchBatchSortId').val(batchRow.BatchSortId);



            $('#addBatchId').val(batchRow.BatchId);
            $('#addBatchNo').val(batchRow.BatchNo);
            $('#addBatchName').val(batchRow.BatchName);
//            $('#addBatchSortId').val(batchRow.BatchSortId);

           $('#addOperateDate').val(batchRow.OperateDate);        
            $('#batchData').dialog('close');
        }
        else {
            $.messager.alert('提示', '没有选择行!', 'info');
        }
    }
    //根据条件查询
    function batchQueryClick() {
        $("#batchDetail").datagrid({
            url: '/BatchSort/GetBatch/?queryString=' + $('#queryBatch').combogrid('getValue') + '&value=' + $('#batchInfo').val()

        });    
        $("#batchDetail").datagrid('reload');
    }
</script>
<div id="batchData" class="easyui-dialog" modal="true" style="width: 500px;
    height: 420px; padding: 0px 0px" closed="true" buttons="#dlgBatch-buttons">
    <div id="btnQuery">
    <td></td>
        <select id="queryBatch" class="easyui-combobox" style="width: 100px;" readonly="true">
            <option value="BatchNo">批次号</option>
            <option value="BatchName">批次名称</option>
           @* <option value="OperateDate">分拣日期</option>*@
        </select>
        <input id="batchInfo">
        <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="batchQueryClick()"
            id="batchQuery">查询</a>
    </div>
    <div split="true" border="false" style="width: 480px; height: 320px;">
        <table id="batchDetail" class="easyui-datagrid" border="false" toolbar="#btn-query"
            singleselect="true" fit="true" fitcolumns="true" pagination="true" rownumbers="true" >
            <thead>
                <tr>
                    <th field="BatchId" width="60">
                        批次ID
                    </th>
                    <th field="BatchNo" width="80">
                        批次号
                    </th>
                    <th field="BatchName" width="80">
                        批次名称
                    </th>
                    <th field="OperateDate" width="100">
                       分拣日期
                    </th>
                </tr>
            </thead>
        </table>
    </div>    
    <div id="dlgBatch-buttons" style="float:right; margin-top:0px; margin-right:10px;">
        <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="batchSave()">确定</a>
        <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#batchData').dialog('close')">
            取消</a>
    </div>
</div>

