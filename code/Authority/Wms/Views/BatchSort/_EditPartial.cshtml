<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            AddLoad();
            showDialog('编辑');
            editKey = true;
            addDialog.dialog('open');
            url = '/BatchSort/Edit';
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");


            $('#fm').form('load', row);

            $('#addStatus').combo({
                hasDownArrow: true
            });
        } else {
            $.messager.alert('错误', '没有选择行！', 'info');
        }
    };
</script>
   