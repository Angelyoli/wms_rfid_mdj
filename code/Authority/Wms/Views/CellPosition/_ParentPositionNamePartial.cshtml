<script type="text/javascript">

    $(function () {
        $('#parentPositionNameDetail').datagrid({
            //双击赋值
            onDblClickRow: function () {
                parentPositionNameSave();
            }
        })
        //属性初始化
        $('#queryType').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        })
    });
    //选中赋值
    function parentPositionNameSave() {
        var parentPositionNameRow = $('#parentPositionNameDetail').datagrid('getSelected');
        if (parentPositionNameRow) {
            $('#PositionId').val(parentPositionNameRow.ID);
            $('#PositionName').val(parentPositionNameRow.PositionName);
            $('#parentPositionNameData').dialog('close');
            editKey = true;
        }
        else {
            $.messager.alert('提示', '没有选择行!', 'info');
        }
    }
    //查询
    function parentPositionNameQueryClick() {
        $("#parentPositionNameDetail").datagrid({
            url: '/SRM/GetSRM/?queryString=' + $('#queryType').combogrid('getValue') + '&value=' + $('#parentPositionNameInfo').val()
        });
        $("#parentPositionNameDetail").datagrid('reload');
        editKey = true;
    }
    
</script>
<div id="parentPositionNameData" class="easyui-dialog" modal="true" style="width: 500px;
    height: 420px; padding: 0px 0px" closed="true" buttons="#dlgProduct-buttons">
    <div id="btnQuery">
        <select id="queryType" class="easyui-combobox" style="width: 100px;" readonly="true">
            <option value="PositionID">公司编码</option>
            <option value="PositionName">公司名称</option>
        </select>
        <input id="parentPositionNameInfo">
        <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="parentPositionNameQueryClick()"
            id="parentPositionNameQuery">查询</a>
    </div>
    <div split="true" border="false" style="width: 486px; height: 320px;">
        <table id="parentPositionNameDetail" class="easyui-datagrid" border="false" toolbar="#btn-query"
            singleselect="true" fit="true" fitcolumns="true" pagination="true" rownumbers="true">
            <thead>
                <tr>
                    <th field="PositionID" width="180">
                        位置ID
                    </th>
                    <th field="PositionName" width="180">
                        位置名称
                    </th>
                    <th field="IsActive" width="180">
                        是否可用
                    </th>
                </tr>
            </thead>
        </table>
    </div>
    <div id="dlgCompany-buttons" style="float:right; margin-top:10px; margin-right:10px;">
        <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="parentPositionNameSave()">
            确定</a> <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#parentPositionNameData').dialog('close')">
                取消</a>
    </div>
</div>

