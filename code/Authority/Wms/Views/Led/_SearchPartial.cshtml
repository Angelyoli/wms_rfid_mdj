<script type="text/javascript">
    var fatherContentID;
    var S_moduleID;
    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
        $("input[type=text]").attr("value", "");
        $('#searchStatus').combo('setValue', "");
        $('#status').combo('setValue', "");
        fatherContentID = "";
        S_moduleID = "";
    };

    function S_select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.LedName = $('#searchLedName').val();
        queryParams.LedGroupCode = $('#searchLedGroupCode').val(); ;
        queryParams.Status = $('#searchStatus').combo('getValue');

        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 50
        });
        $('#dlg-search').dialog('close');
    }

    function LedGroupCodeSelect() {
        $('#LedgroupData').dialog('open').dialog('setTitle', '选择父结点');
        $('#LedGroupCodeDetail').datagrid({ url: '/Led/Details/?LedType=1' });
        $("#LedGroupCodeDetail").datagrid('reload');
    }
</script>
<div id="dlg-search" class="easyui-dialog" modal="true" style="width: 280px; height: 200px;
    padding: 2px 2px" closed="true" buttons="#dlg-buttons-research">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" style="padding: 10px 10px; background: #fff;
            border: 1px solid #ccc;">
            <table width="250">
                <tr>
                    <td width="60" align="right">
                        Led屏名称：
                    </td>
                    <td width="160" align="left">
                        <input id="searchLedName" name="LedName" class="easyui-validatebox" type="text" />
                    </td>
                </tr>
                <tr>
                    <td width="60" style="text-align: right">
                        状态:
                    </td>
                    <td align="left">
                        <select id="searchStatus" name="Status" class="easyui-combobox" readonly="readonly">
                            <option value="1">可用</option>
                            <option value="0">不可用</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-research">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="S_select()">查1询</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">
        取消</a>
</div>
