<script type="text/javascript">

    function groupQueryClick() {
        $('#LedGroupCodeDetail').datagrid({ url: '/Led/GetLedGroupCode/?QueryString=' + $('#queryType').combobox('getValue') + '&Value=' + $('#ledInfo').val() });
        $("#LedGroupCodeDetail").datagrid('reload');
    };

    function ledgroupCodeSave() {
        var ledRow = $('#LedGroupCodeDetail').datagrid('getSelected');
        if (ledRow) {

            $('#searchLedGroupCode').val(ledRow.LedCode);
            $('#addLedGroupCode').val(ledRow.LedCode);
            $('#LedGroupCode').val(ledRow.LedCode);
            fatherContentID = ledRow.LedCode;
            $('#LedgroupData').dialog('close');
        }
    }

    $(function () {
        $('#queryType').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        });
        $('#LedGroupCodeDetail').datagrid({
            onDblClickRow: function () {
                ledgroupCodeSave();
            }
        })
    });
</script>
<div id="LedgroupData" class="easyui-dialog" modal="true" style="width: 500px; height: 390px;
    padding: 0px 0px" closed="true" buttons="#dlg_groupContent-buttons">
    <div split="true" border="false" style="width: 480px; height: 320px">
        <table id="LedGroupCodeDetail" class="easyui-datagrid" border="false" toolbar="#btn-query"
            pagesize="50" singleselect="true" fit="true" fitcolumns="true" pagination="true"
            rownumbers="true">
            <thead>
                <tr>
                    <th field="LedCode" width="100">
                        Led编号
                    </th>
                    <th field="LedName" width="100">
                        Led屏名称
                    </th>
                    <th field="LedType" width="100">
                        Led类型
                    </th>
                    <th field="LedIp" width="100">
                        Led屏IP
                    </th>
                    <th field="Status" width="80">
                        状态
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="dlg_groupContent-buttons">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="ledgroupCodeSave()">
        确定</a> <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#LedgroupData').dialog('close')">
            取消</a>
</div>
<div id="btn-query">
    <select id="queryType" name="QueryString" class="easyui-combobox" style="width: 100px;"
        readonly="true">
        <option value="LedName">Led屏名称</option>
        <option value="LedIp">Led屏IP</option>
    </select>
    <input id="ledInfo">
    <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="groupQueryClick()"
        id="groupQuery">查询</a>
</div>
