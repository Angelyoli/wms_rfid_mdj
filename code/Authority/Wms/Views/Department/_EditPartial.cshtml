<script type="text/javascript">
function editClick() {
    var row = $('#details').datagrid('getSelected');
    if (row) {
        AddLoad();
        showDialog('编辑');
        addDialog.dialog('open');
        url = '/Department/Edit';
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#inputDepartCode').attr("readonly", true);
        $('#fm').form('load', row);
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        if (row.IsActive == '可用') {
            $('#isActive_depart').combo('setValue', 1).combo('setText', row.IsActive);
        } else {
            $('#isActive_depart').combo('setValue', 0).combo('setText', row.IsActive);
        }
        $('#isActive_depart').combo({
            hasDownArrow: true
        });
    } else {
        $.messager.alert('错误', '没有选择行！','info');
    }
};
</script>
   