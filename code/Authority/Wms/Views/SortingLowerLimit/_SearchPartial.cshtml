<script type="text/javascript">
    var module = "SortingLowerLimit";
    var searchKey = false;
    var addKey = false;
    var editKey = false;
    var deleteKey = false;
    var productKey = false;

    $(function () {
        $('#status').combo({
            editable: false,
            panelHeight: 45
        });
    })

    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
        searchKey = true;
        $("input[type=text]").attr("value", "");
    };

    function select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.SortingLineCode = $('#SortingLineCode').val();
        queryParams.SortingLineName = $('#SortingLineName').val();
        queryParams.ProductCode = $('#ProductCode').val();
        queryParams.ProductName = $('#ProductName').val();
        queryParams.IsActive = $('#status').combo('getValue');
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 50
        }); 
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close'); 
    }
</script>
