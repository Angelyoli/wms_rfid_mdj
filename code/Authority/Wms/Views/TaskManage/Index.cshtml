<div region="center" split="true" border="false" >    
    <table id="details" class="easyui-datagrid" url="/TaskManage/Details/" border="false" singleSelect="true"
        fit="true" toolbar="#tool"  pagination="true" rownumbers="true" >
        <thead>
            <tr>
                <th field="ID" hidden="true" width="80" >ID</th>
                <th field="TaskType" width="60" >任务类型</th>
                <th field="TaskLevel" width="70">任务优先级</th>
                <th field="PathName" width="60">路径名称</th>
                <th field="ProductCode" width="60">商品代码</th>

                <th field="ProductName" width="80" >商品名称</th>
                <th field="OriginStorageCode" width="80" >起始存储位</th>
                <th field="TargetStorageCode" width="80" >目标存储位</th>
                <th field="OriginPositionName" width="60" >起始位置</th>
                <th field="TargetPositionName" width="60" >目标位置</th>

                <th field="CurrentPositionName" width="60" >当前位置</th>
