<script type="text/javascript">
    function deleteClick() {
        var deleteRow = $('#details').datagrid('getSelected');
        if (deleteRow) {
            $('#dlg-add').dialog('open').dialog('setTitle', '删除任务信息');
            $('#addFm').form('load', deleteRow);

            //使Form中的文本验证失效
            $('#addFm .easyui-validatebox').validatebox({ required: false });
            //使Form中的文本禁用
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");

            url = '/TaskManage/Delete/?taskId=' + deleteRow.ID;
        } else {
            $.messager.alert('错误', '没有选择行！','info');
        }
    };
</script>
