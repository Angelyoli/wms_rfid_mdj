<script type="text/javascript">
    var Module = "TaskManage";
    var url;
    var type;

    $(function () {
        addInit();
    })
    //初始化
    function addInit() {
        $('#originRegionName2').attr('readonly', 'true');
        $('#targetRegionName2').attr('readonly', 'true');
        $('#productCode2').attr('readonly', 'true');
        $('#productName2').attr('readonly', 'true');
        $('#originPositionName2').attr('readonly', 'true');
        $('#targetPositionName2').attr('readonly', 'true');
        $('#currentPositionName2').attr('readonly', 'true');

        $('#originCellCode2').attr('readonly', 'true');
        $('#targetCellCode2').attr('readonly', 'true');
        $('#currentCellCode2').attr('readonly', 'true');

        $('#taskType2').combo({ editable: false, panelWidth: 'auto', panelHeight: 'auto' });
        $('#currentPositionState2').combo({ editable: false, panelWidth: 'auto', panelHeight: 'auto' });
        $('#state2').combo({ editable: false, panelWidth: 'auto', panelHeight: 'auto' });
        $('#tagState2').combo({ editable: false, panelWidth: 'auto', panelHeight: 'auto' });
        $('#orderType2').combo({ editable: false, panelWidth: 'auto', panelHeight: 'auto' });
        $('#downloadState2').combo({ editable: false, panelWidth: 'auto', panelHeight: 'auto' });
    }
    //添加
    function addClick() {
        $('#dlg-add').dialog('open').dialog('setTitle', '新增任务管理信息');

        //恢复Form中的文本的有效验证
        $('#addFm .easyui-validatebox').validatebox({ required: true });
        //恢复Form中禁用的文本
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");

        $('#addFm').form('clear');
        url = '/TaskManage/Create/';
    };
    
    //保存
    function save() {
        $('#addFm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.alert(g_MsgBoxTitle, result.msg, "info");
                    $('#dlg-add').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.alert(g_MsgBoxTitle, result.msg + '<br />' + result.data, "error");
                    $('#details').datagrid('reload');
                }
            }
        });
    }
</script>
