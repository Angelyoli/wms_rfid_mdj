<script type="text/javascript">
    var url;
    var addDialog;
    function AddLoad() {
        $('#isActive_job').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 130
        });
    }

    //加载新增、编辑和删除窗体
    function showDialog(title) {
        if (addDialog == null) {
            addDialog = $('<div></div>').dialog({
                title: title,
                width: 510,
                height: 250,
                closed: true,
                cache: false,
                modal: true,
                href: '/Job/AddPage/',
                buttons: [{
                    text: '确定',
                    iconCls: 'icon-ok',
                    handler: function () {
                        save();
                    }
                }, {
                    text: '取消',
                    iconCls: 'icon-cancel',
                    handler: function () {
                        addDialog.dialog('close');
                    }
                }],
                onLoad: function () {
                    if (title == '编辑') {
                        var erow = $('#details').datagrid('getSelected');
                        $('#fm').form('load', erow);
                    }
                    else if (title == '删除') {
                        var drow = $('#details').datagrid('getSelected');
                        $('#fm').form('load', drow);
                        $('form input').attr("disabled", "disabled");
                        $('form textarea').attr("disabled", "disabled");
                    }
                }
            });
        }
        else {
            addDialog.dialog({ title: title });
        }
    }

    function addClick() {
        AddLoad();
        showDialog('新增');
        addDialog.dialog('open');
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#fm').form('clear');
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#inputJobCode').attr("readonly", false);
        $('#isActive_job').combo({
            hasDownArrow: true
        });
        url = '/Job/Create/';
    };

    function save() {
        if ($("#desId").val().length > 100) {
            $.messager.alert("提示", "描述应小于100个字(包括空格)", "info");
            return false
        }
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.alert(g_MsgBoxTitle, result.msg, "info");
                    addDialog.dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.alert(g_MsgBoxTitle, result.msg + '<br />' + result.data, "error");
                    $('#details').datagrid('reload');
                }
            }
        });
    }
</script>
