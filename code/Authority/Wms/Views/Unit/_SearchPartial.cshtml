<script type="text/javascript">
    var module = "Unit";
    var searchKey = false;
    var addKey = false;
    var editKey = false;
    var deleteKey = false;
    $(function () {
        $('#isActive').combo({
            editable: false,
            panelHeight: 65,
            panelWidth: 130
        });
    })

    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '查询单位信息');
        searchKey = true;
        $("input[type=text]").attr("value", "");
        $('#isActive').combo('setValue',"");
    };

    function select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.UnitCode = $('#UnitCode').val();
        queryParams.UnitName = $('#UnitName').val();
        queryParams.IsActive = $('#isActive').combo('getValue');
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 50
        });
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close');
    }
</script>
