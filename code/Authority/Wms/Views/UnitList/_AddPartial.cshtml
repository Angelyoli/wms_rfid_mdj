    function addClick() {
        $('#dlg-add').dialog('open').dialog('setTitle', '新增单位系列信息');
        addKey = true;
        $('#unitListCode').attr("readonly", false);
        $('#fm-add').form('clear');
        $('#fm-add .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('#IsActive').combo({
            hasDownArrow: true
        });
        url = '/UnitList/Create/';
    };

    function save() {
        $('#fm-add').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.show({
                        title: '成功',
                        msg: result.msg
                    });
                    $('#dlg-add').dialog('close');
                    addKey = false;
                    editKey = false;
                    $('#details').datagrid('reload');
                } else {
                    $.messager.show({
                        title: '错误',
                        msg: result.msg
                    });
                    addKey = false;
                    editKey = false;
                    $('#details').datagrid('reload');
                }
            }
        });
    }
