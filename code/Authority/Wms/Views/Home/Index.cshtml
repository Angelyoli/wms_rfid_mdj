@{
    Layout = "";
}
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<title>thok.bs.ui</title>
    <link href="/Content/Scripts/jquery-easyui-1.3/themes/default/easyui.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Scripts/jquery-easyui-1.3/themes/icon.css" rel="stylesheet" type="text/css" />
    
    <link href="/Content/themes/base/default.css" rel="stylesheet" type="text/css" />
    <link href="/Content/themes/base/icon.css" rel="stylesheet" type="text/css" />    
    <link href="/Content/themes/base/css/css.css" rel="stylesheet" type="text/css" />
    
    <script src="/Content/Scripts/jquery-easyui-1.3/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="/Content/Scripts/jquery-easyui-1.3/jquery.easyui.min.js" type="text/javascript"></script> 
    <script src="/Content/Scripts/jquery-easyui-1.3/locale/easyui-lang-zh_CN.js" type="text/javascript"></script>
    
    <script src="/Content/Scripts/jthok-ui/JDiv.js" type="text/javascript"></script>
    <script src="/Content/Scripts/jthok-ui/leftmenu.js" type="text/javascript"></script>
    
    <script src="/Content/Scripts/jquery.fullscreen.js" type="text/javascript"></script>
    <script src="/Content/Scripts/jquery.ajaxsetup.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(
            function(){
            $.getJSON('/ProductWarning/GetWarningPrompt/', function (data) {
                if (data > 0) {
                    $.messager.show({
                        timeout: 0,
                        width: 300,
                        height: 130,
                        title: '预警信息提示',
                        msg:'有'+'<span style="color:red;">'+data+ '</span>'+'条预警信息！请进入产品质量管理页面进行查看！'
                    });
                }
            })
        })
    </script>
</head>
<body class="easyui-layout">
	<noscript>
		<div style=" position:absolute; z-index:100000; height:2046px;top:0px;left:0px; width:100%; background:white; text-align:center;">
    			<img src="/Content/Images/noscript.gif" alt='抱歉，请开启脚本支持！' />
		</div>
	</noscript>

	<div region="north" title='' split="true" border="false" style="overflow: hidden; height: 78px;background:#D2E0F2 repeat-x center 50%;line-height: 20px;color: #fff; font-family: Verdana, 微软雅黑,黑体">
        @Html.Partial("_HeaderPartial") 
	    <div id='mainmenu'></div>
	</div>

    <div id='left' region="west" split="true" title="导航菜单" style="width:220px;">
	    <div id="leftmenu" class="easyui-accordion width" border="false" style="width: auto"></div>
    </div>

	<div region="center" title="工作区" style="overflow:hidden;">
		<div id='tabs' class="easyui-tabs" fit="true" border="false" style="padding: 0px; margin: 0px">
        </div>
	</div>

    <div region="south" split="true" style="height: 30px; background: #D2E0F2; ">
        <div class="footer">天海欧康科技信息（厦门）有限公司 www.skyseaok.com</div>
    </div>
    @Html.Partial("_MenuPartial") 
    @Html.Partial("_LogonPartial") 
    @Html.Partial("_ChangeCityPartial")    
    @Html.Partial("_ChangeSystemPartial")
    @Html.Partial("_ChangeServerPartial") 
    @Html.Partial("_ChangePasswordPartial")   
</body>
</html>