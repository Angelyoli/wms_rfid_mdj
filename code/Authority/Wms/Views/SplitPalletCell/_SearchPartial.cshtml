<script type="text/javascript">
    function searchInit() {
        $('#productCode1').attr('readonly', 'true');
        $('#productName1').attr('readonly', 'true');
        $('#shelfType1').combo({ editable: false, width: 129, panelHeight: 'auto' });
    }
    //清空文本
    function serachClear() {
        $("input[type=text]").attr("value", "");
        $('#shelfType1').combo('setValue', "");
    }
    function searchClick() {
        serachClear();
        searchInit();
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    }
    //查询条件
    function searchByParams() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.ID = $('#id1').val();
        queryParams.ProductCode = $('#productCode1').val();
        queryParams.ShelfType = $('#shelfType1').combo('getValue');
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({ pageNumber: 1, pageSize: 50 });
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close');
    }
</script>
<div id="dlg-search" class="easyui-dialog" modal="true" style="width: 300px; height: 180px;
    padding: 2px 2px" closed="true" buttons="#dlg-search-buttons">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" style="padding: 10px 10px; background: #fff;
            border: 1px solid #ccc;">
            <table>
                <tr>
                    <input id="productCode1" type="text" style="display:none;"/>
                    
                    <td class="searchTd1">
                        商品名称：
                    </td>
                    <td align="left">
                        <input id="productName1" type="text" />
                        <a href="#" onclick="productQuery()" class="easyui-linkbutton" iconcls="icon-search"
                            plain="true"></a>
                    </td>
                </tr>
                <tr>
                    <td width="60" style="text-align: right">
                        拆盘类型：
                    </td>
                    <td>
                        <select id="shelfType1" class="easyui-combobox">
                            <option value=""></option>
                            <option value="01">大品种一区</option>
                            <option value="02">大品种二区</option>
                            <option value="03">小品种</option>
                            <option value="04">异型烟</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-search-buttons">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="searchByParams()">确定</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">
        取消</a>
</div>
