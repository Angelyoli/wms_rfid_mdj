<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '编辑卷烟信息');
            editKey = true;
            $('#Productfm').form('load', row);
            $('#Productfm .easyui-validatebox').validatebox({ required: true });

            if (row.IsActive == '可用') {
                $('#cc').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#cc').combo('setValue', 0).combo('setText', row.IsActive);
            }
            if (row.IsAbnormity == '是') {
                $('#ft').combo('setValue', 1).combo('setText', row.IsAbnormity);
            } else {
                $('#ft').combo('setValue', 0).combo('setText', row.IsAbnormity);
            }
            if (row.IsRounding == '取整件') {
                $('#ir').combo('setValue', 0).combo('setText', row.IsRounding);
            }
            if (row.IsRounding == '不取整') {
                $('#ir').combo('setValue', 1).combo('setText', row.IsRounding);
            }
            if (row.IsRounding == '去整托盘') {
                $('#ir').combo('setValue', 2).combo('setText', row.IsRounding);
            }
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");
            //$('#brandCode').attr("readonly", true);
            //$('#supplierCode').attr("readonly", true);
            $('#p').attr("readonly", true);
            $('#cc').combo({
                hasDownArrow: true
            });

            //指定库区
            $('#area').combotree({ url: '/Area/GetDetailsTree/', multiple: true, width: 210, panelheight: "auto" });
            var aa = row.PointAreaCodes.split(',');
            $('#area').combotree('setValues', aa);
            
            url = '/Product/Edit/';
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
