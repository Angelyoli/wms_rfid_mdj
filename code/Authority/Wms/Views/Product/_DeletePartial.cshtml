<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '删除品牌信息');
            deleteKey = true;
            $('#Productfm .easyui-validatebox').validatebox({
                required: false
            });
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");
            $('#Productfm').form('load', row);
            if (row.Status == '启用') {
                $('#cc').combo('setValue', true).combo('setText', row.IsActive);
            } else {
                $('#cc').combo('setValue', false).combo('setText', row.IsActive);
            }
            url = '/Product/Delete/?ProductCode=' + row.ProductCode;
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>