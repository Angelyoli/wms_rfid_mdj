<script type="text/javascript">
    var url;
    function addClick() {
        $('#dlg').dialog('open').dialog('setTitle', '新增');
        addKey = true;
        $('#Productfm').form('clear');
        $('#p').attr("readonly", false);
        $('#Productfm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");

        //指定库区
        $('#area').combotree({ url: '/Area/GetDetailsTree/', multiple: true, width: 160 });

        url = '/Product/Create/';
    };

    function save() {
        var areas = $('#area').combotree('getValues');
        $('#Productfm').form('submit', {
            url: url + "?pointAreaCodes=" + areas,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.alert(g_MsgBoxTitle, result.msg, "info");
                    addKey = false;
                    editKey = false;
                    $('#dlg').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.alert(g_MsgBoxTitle, result.msg + '<br />' + result.data, "error");
                    addKey = false;
                    editKey = false;
                    $('#details').datagrid('reload');
                }
            }
        });
    }
    function supplierSelect() {
        $('#supplierData').dialog('open').dialog('setTitle', '选择厂商信息');
        $('#supplierDetail').datagrid({ url: '/Supplier/Details/' });
        $("#supplierDetail").datagrid('reload');
