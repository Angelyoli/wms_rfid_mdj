<script type="text/javascript">
    var module = "Product";
    var searchKey = false;
    var addKey = false;
    var editKey = false;
    var deleteKey = false;

    var isadd = false, isedit = false, isdel = false;

    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '查询品牌信息');
        searchKey = true;
        $("input[type=text]").attr("value", "");
        $('#ATC').combo('setValue', "");
        $('#PLC').combo('setValue', "");
    };
    function select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.ProductCode = $('#PC').val();
        queryParams.CustomCode = $('#CC').val();
        queryParams.ProductName = $('#PN').val();
        queryParams.BrandCode = $('#brandCode2').val();
        queryParams.UniformCode = $('#NC').val();
        queryParams.AbcTypeCode = $('#ATC').combo('getValue');
        queryParams.ShortCode = $('#SC').val();
        queryParams.PriceLevelCode = $('#PLC').combo('getValue');
        queryParams.SupplierCode = $('#supplierCode2').val();
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 50
        });
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close');
    }
    </script>
